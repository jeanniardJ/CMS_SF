{% trans_default_domain 'login' %}
{% extends './login_base.html.twig' %}

{% block title %}{{ 'login.reset-password.title'|trans }}{% endblock %}

{% block body %}
    <section class="vh-100">
        <div class="container-fluid d-flex justify-content-center align-items-center h-100">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-body">

                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    <h1>{{ 'login.reset-password.title-page'|trans }}</h1>

                    {{ form_start(requestForm) }}
                    <div class="mb-3">
                        {{ form_row(requestForm.email) }}
                    </div>
                    <div class="mb-3">
                        <small>
                            {{ 'login.reset-password.message'|trans }}
                        </small>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">

                        <button class="btn btn-primary">{{ 'login.reset-password.send-btn'|trans }}</button>
                        <a class="btn btn-secondary" href="{{ path('app_home') }}">{{ 'return.home'|trans }} <i
                                    class="fas fa-undo"></i></a>
                    </div>
                    {{ form_end(requestForm) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}