{% extends 'admin/base.html.twig' %}
{% trans_default_domain "admin" %}
{% block title %}Status index{% endblock %}
{% set menuActive = "prospect" %}
{% block body %}
    <h1>Status index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td>{{ status.id }}</td>
                <td>{{ status.name }}</td>
                <td>{{ status.description }}</td>
                <td>
                    <a href="{{ path('app_status_adm_edit', {'id': status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_status_adm_new') }}">Create new</a>
{% endblock %}
