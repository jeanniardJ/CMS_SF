<form method="post" action="{{ path('app_contact_adm_delete', {'id': contact.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn btn-danger"><i class="bi bi-trash"></i> {{ 'delete'|trans }}</button>
</form>